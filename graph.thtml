var line = d3.svg.line()
  .x(function(d) { return x(d.letter); })
  .y(function(d) { return y(d.val); })
  .interpolate("basis");

svg2.append('svg:path')
  .attr('d', line(odd(data)))
  .attr('stroke', '#FF5722')
  .attr('stroke-width', 2)
  .attr('fill', 'none');

svg2.append('svg:path')
  .attr('d', line(even(data)))
  .attr('stroke', '#727272')
  .attr('stroke-width', 2)
  .attr('fill', 'none');

function even(data) {
  return select(data, function(i){ return i%2 })
}

function odd(data) {
  return select(data, function(i){ return !(i%2) })
}

function select(data, validate) {
  var r = [];

  for (i = 0; i < data.length; i++) {
    validate(i) && r.push(data[i]);
  }

  return r
}

