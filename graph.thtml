      .attr("class", function(_, i) { return "bar" + (i%2 > 0 ? "-min" : "");})
      .attr("x", function(d) { return x(d.letter) + 1; })
      .attr("width", x.rangeBand() - 2)
      .attr("y", function(d) { return y(d.val) })
      .attr("height", function(d) { return height - y(d.val) - 1; });

// plot line-chart

